ARG GOLANG_VERSION=1.17.5
FROM library/golang:${GOLANG_VERSION}-alpine3.16
RUN apk --no-cache add \
    bash \
    coreutils \
    curl \
    docker \
    file \
    g++ \
    gcc \
    git \
    make \
    mercurial \
    rsync \
    subversion \
    wget
COPY scripts/ /usr/local/go/bin/
RUN set -x \
 && chmod -v +x /usr/local/go/bin/go-*.sh \
 && go version
